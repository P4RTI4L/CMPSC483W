<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    <ImageView
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:id="@+id/imageview_content_grid_item"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter" />
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_content_grid_item_title"
        android:layout_toRightOf="@id/imageview_content_grid_item"
        android:layout_alignParentTop="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_content_grid_item_release_date"
        android:layout_toRightOf="@id/imageview_content_grid_item"
        android:layout_below="@id/textview_content_grid_item_title" />
</RelativeLayout>
